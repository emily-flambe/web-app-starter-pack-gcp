{
  "name": "web-app-starter-pack",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A comprehensive React + TypeScript web application starter pack with modern tooling",
  "keywords": [
    "react",
    "typescript",
    "vite",
    "tailwindcss",
    "vitest",
    "starter-kit"
  ],
  "scripts": {
    "dev": "vite",
    "dev:api": "wrangler dev",
    "build": "tsc -b && vite build",
    "build:prod": "tsc -b && vite build --mode production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "preview": "vite preview",
    "db:init": "wrangler d1 execute web-app-starter-pack-db --local --file=./db/schema.sql",
    "db:seed": "wrangler d1 execute web-app-starter-pack-db --local --file=./db/seed.sql",
    "deploy": "npm run build && wrangler deploy",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "hono": "^4.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.1.5",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "identity-obj-proxy": "^3.0.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^4.0.0-alpha.37",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  },
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  }
}
